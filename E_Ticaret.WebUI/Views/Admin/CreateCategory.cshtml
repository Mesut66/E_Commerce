@model CategoryModel
@{
    ViewData["Title"] = "CreateCategory";
}

@section Scripts
{
    <script src="~/lib/jQuery.Validation.1.8.0.1/Content/Scripts/jquery.validate.js"></script>
    <script src="~/lib/Microsoft.jQuery.Unobtrusive.Validation.3.2.11/Content/Scripts/jquery.validate.unobtrusive.js"></script>
}

<h1>Create Category</h1>

<hr />
<div class="row">
    <div class="col-md-8">

        <form asp-controller="Admin" asp-action="CreateCategory" method="post">
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-md-10 offset-2">
                    <button type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </div>

        </form>

    </div>
</div>

