@model ProductListModel
@{
    ViewData["Title"] = "ListProduct";
}

<h1>Admin Products</h1>
<hr />
@if (Model.Products.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>
                <td>Image</td>
                <td>Name</td>
                <td>Price</td>
                <td>Düzenle / Sil</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><img src="~/img/@item.ImageUrl" width="80" /></td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td style="width:250px;">
                        <a class="btn btn-warning btn-sm mr-2" href="/Admin/Products/@item.Id">Edit</a>

                        <form action="/admin/deleteProduct" method="post" style="display:inline;">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}

