@model CategoryListModel
@{
    ViewData["Title"] = "CategoryList";
}

<h1>Admin Categoryes</h1>

<hr />
@if (Model.categories.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Id</td>         
                <td>Category Name</td>
                <td>Düzenle / Sil</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.categories)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td style="width:250px;">
                        <a class="btn btn-warning btn-sm mr-2" href="/Admin/Editcategory/@item.Id">Edit</a>

                        <form action="/admin/deleteCategory" method="post" style="display:inline;">
                            <input type="hidden" name="categoryId" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Products</h4>
    </div>
}


