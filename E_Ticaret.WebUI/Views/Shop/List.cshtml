<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoryList")
    </div>
  

    <div class="col-md-9">
        <div class="row mt-3">
            @foreach (var item in Model.Products)
            {
                @*<p>@item.Name</p>*@
                <partial name="_product" for="@item" /> @* for: parial daki urunleri çevirecek*@
            }
        </div>
        <div page-model="@Model.PageInfo"></div>
    </div>
</div>
